@using LibraryBooks.Dependencies
@using LibraryBooks.Entities;

@{
    Layout = "~/Pages/Layout/_BasicLayout.cshtml";

    var userInfoBll = DependencyResolver.Instance.UserInfoLogic;
    var users = userInfoBll.GetAll();

    PageData["Title"] = "Users";

    if(!User.IsInRole("admin"))
    {
        Response.Redirect("/");
    }
}
<h3>
    Список читателей
</h3>

@{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">ShortFullName</th>
                <th scope="col">Age</th>
                <th scope="col">DateOfBirth</th>
                <th scope="col">PhoneNumber</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @{
                int index = 0;
                foreach (var user in users)
                {
                    index++;
                        <tr>
                            <th scope="row">@index</th>
                            <td>@user.ShortFullName</td>
                            <td>@user.Age</td>
                            <td>@user.DateOfBirth.ToString("D")</td>
                            <td>@user.Phone</td>
                            <td>
                                <a href="~/Pages/User/Delete?id=@(user.UserId)" class="btn btn-primary">Delete</a>
                                <a href="~/Pages/User/Details?id=@(user.UserId)" class="btn btn-primary">Details</a>
                            </td>

                        </tr>
                }
            }
        </tbody>
    </table>
}